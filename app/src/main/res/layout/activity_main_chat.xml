<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.whitebirdtechnology.medicalassistant.ChatScreen.MainActivityChat">
    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingBottom="10dp"
        android:id="@+id/constrainLayoutInfo"
        android:background="@color/light_blue_chat">
    <android.support.v7.widget.CardView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="50dip"
        android:id="@+id/cardView"
        android:elevation="2dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:id="@+id/imageViewProf"
            android:scaleType="fitXY"
            android:src="@drawable/expert_icon_big"/>
    </android.support.v7.widget.CardView>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/cardView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/imageButtonCall"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:text="Dr. Aman Kashyap"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:maxLines="1"
        android:ems="3"
        android:id="@+id/textViewName"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/cardView"
        app:layout_constraintTop_toBottomOf="@+id/textViewName"
        android:text="Psychiatrist [MBBS] "
        android:layout_marginLeft="10dp"
        app:layout_constraintRight_toLeftOf="@+id/imageButtonCall"
        android:layout_marginTop="5dp"
        android:textColor="@color/lightBlue"
        android:textSize="12sp"
        android:maxLines="1"
        android:ems="3"
        android:id="@+id/textViewOccupation"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/cardView"
        app:layout_constraintTop_toBottomOf="@+id/textViewOccupation"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="is Typing.."
        app:layout_constraintRight_toLeftOf="@+id/imageButtonCall"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:maxLines="1"
        android:ems="3"
        android:id="@+id/textViewIsTyping"/>
   <ImageButton
       android:layout_width="wrap_content"
       android:layout_height="20dp"
       android:src="@drawable/file_option_icon"
       app:layout_constraintRight_toRightOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       android:layout_marginTop="30dp"
       android:scaleType="fitStart"
       android:id="@+id/imageButtonOption"
       android:background="@color/transparent"
       android:layout_marginRight="10dp"/>
        <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/attach_icon"
            android:scaleType="fitStart"
            app:layout_constraintRight_toLeftOf="@+id/imageButtonOption"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="30dp"
            android:id="@+id/imageButtonAttach"
            android:background="@color/transparent"
            android:layout_marginRight="10dp"/>
        <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/call_icon"
            android:scaleType="fitStart"
            app:layout_constraintRight_toLeftOf="@+id/imageButtonAttach"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="30dp"
            android:id="@+id/imageButtonCall"
            android:background="@color/transparent"
            android:layout_marginRight="10dp"/>

</android.support.constraint.ConstraintLayout>
    <ListView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/listViewChat"
        app:layout_constraintTop_toBottomOf="@+id/constrainLayoutInfo"
        app:layout_constraintBottom_toTopOf="@+id/constrainLayoutEditText"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/lightGray"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/constrainLayoutEditText">
        <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/plus_icon"
            android:scaleType="centerInside"
            android:layout_marginLeft="5dp"
            android:id="@+id/imageButtonAdd"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/transparent"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toLeftOf="@+id/imageButtonSend"
            android:background="@drawable/shape_edit_text_white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="10dp"
            android:inputType="textMultiLine"
            android:maxHeight="130dp"
            android:padding="5dp"
            android:id="@+id/editTextChatMsg"
            android:layout_marginEnd="10dp"
            app:layout_constraintLeft_toRightOf="@+id/imageButtonAdd"/>
        <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/send_icon"
            android:scaleType="centerInside"
            android:layout_marginRight="5dp"
            android:background="@color/transparent"
            android:id="@+id/imageButtonSend"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>