<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/screen01"
    tools:context="com.whitebirdtechnology.medicalassistant.LaunchScreen.MainActivityLaunchScreen">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGO"
        android:gravity="center"
        android:id="@+id/textViewLogo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="170dp"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/white"
        android:textSize="50sp"/>

    <TextView
        android:id="@+id/textViewUserLogin"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="24dp"
        android:background="@color/blue_button"
        android:text="User Login"
        android:textColor="@color/white"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/textViewExpertLogin"
        app:layout_constraintTop_toBottomOf="@+id/textViewLogo"
        android:layout_marginRight="10dp" />

    <TextView
        android:id="@+id/textViewExpertLogin"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="24dp"
        android:background="@color/blue_button"
        android:text="Expert Login"
        android:textColor="@color/white"
        app:layout_constraintLeft_toRightOf="@+id/textViewUserLogin"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewLogo" />

</android.support.constraint.ConstraintLayout>
