<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="30dip"
        android:id="@+id/cardView"
        android:elevation="2dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:id="@+id/imageViewProfChatHistory"
            android:scaleType="fitXY"
            android:src="@drawable/expert_icon_big"/>
    </android.support.v7.widget.CardView>
<TextView
    android:layout_width="204dp"
    android:layout_height="wrap_content"
    android:maxLines="1"
    android:ems="3"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_margin="10dp"
    android:text="Shirish Akhare"
    android:ellipsize="end"
    app:layout_constraintLeft_toRightOf="@+id/cardView"
    app:layout_constraintRight_toLeftOf="@+id/textViewTime"
    android:textColor="@color/black"
    android:textSize="19sp"
    android:id="@+id/textViewName"
    android:layout_marginTop="10dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/textViewTime"
        android:text="10:00 PM"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/gray" />
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        app:layout_constraintLeft_toRightOf="@+id/cardView"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewName"
        android:id="@+id/textViewLastMsg"
        android:maxLines="1"
        android:ems="3"
        android:ellipsize="end"
        app:layout_constraintBottom_toBottomOf="@+id/cardView"
        android:text="last Message "
        app:layout_constraintRight_toLeftOf="@+id/textView"
        android:layout_marginRight="8dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTime"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/cardView"
        android:gravity="center"
        android:background="@drawable/oval_corner"
        android:text="10"
        android:textColor="@color/white"
        android:id="@+id/textView" />
</android.support.constraint.ConstraintLayout>